Subject: [PATCH] LockClock: change forecast text color to white

diff --git a/res/layout/forecast_activity.xml b/res/layout/forecast_activity.xml
index fe71b1c..9537c9e 100644
--- a/res/layout/forecast_activity.xml
+++ b/res/layout/forecast_activity.xml
@@ -46,7 +46,8 @@
                 android:ellipsize="end"
                 android:layout_weight="0.8"
                 android:paddingLeft="3dp"
-                android:textAppearance="?android:attr/textAppearanceMediumInverse" />
+                android:textAppearance="?android:attr/textAppearanceMediumInverse"
+                android:textColor="@color/white" />
 
             <ImageView
                 android:id="@+id/weather_refresh"
@@ -98,7 +98,7 @@
                     android:ellipsize="marquee"
                     android:gravity="center_horizontal"
                     android:maxLines="2"
-                    android:textColor="?android:attr/textColorPrimaryInverse"
+                    android:textColor="@color/white"
                     android:textSize="14sp"
                     android:textStyle="bold" />
 
@@ -109,7 +109,7 @@
                     android:layout_below="@id/weather_city"
                     android:layout_centerHorizontal="true"
                     android:gravity="center_horizontal"
-                    android:textColor="?android:attr/textColorSecondaryInverse"
+                    android:textColor="@color/white"
                     android:textSize="10sp" />
             </RelativeLayout>
 
@@ -126,7 +126,8 @@
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
-                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
+                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
+                    android:textColor="@color/white" />
 
                 <TextView
                     android:id="@+id/weather_low_high"
@@ -136,7 +136,7 @@
                     android:layout_centerHorizontal="true"
                     android:paddingBottom="2dip"
                     android:textSize="12sp"
-                    android:textColor="?android:attr/textColorPrimaryInverse" />
+                    android:textColor="@color/white" />
 
                 <ImageView
                     android:id="@+id/weather_divider"
@@ -154,7 +154,7 @@
                     android:layout_centerHorizontal="true"
                     android:paddingTop="2dip"
                     android:textSize="12sp"
-                    android:textColor="?android:attr/textColorPrimaryInverse" />
+                    android:textColor="@color/white" />
             </RelativeLayout>
 
             <TextView
@@ -166,6 +168,7 @@
                 android:ellipsize="marquee"
                 android:singleLine="true"
                 android:textAppearance="?android:attr/textAppearanceMediumInverse"
+                android:textColor="@color/white"
                 android:paddingBottom="8dp" />
         </RelativeLayout>
 
diff --git a/res/layout/forecast_item.xml b/res/layout/forecast_item.xml
index 0741a50..cc11ac5 100644
--- a/res/layout/forecast_item.xml
+++ b/res/layout/forecast_item.xml
@@ -29,7 +29,7 @@
         android:drawableBottom="@android:drawable/divider_horizontal_dark"
         android:gravity="center_horizontal|fill_horizontal"
         android:textAppearance="?android:attr/textAppearanceSmallInverse"
-        android:textColor="?android:attr/textColorPrimaryInverse"
+        android:textColor="@color/white"
         style="@style/label_shadow"/>
 
     <ImageView
@@ -48,7 +48,7 @@
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:textAppearance="?android:attr/textAppearanceSmallInverse"
-        android:textColor="?android:attr/textColorPrimaryInverse"
+        android:textColor="@color/white"
         style="@style/label_shadow"/>
 
 </LinearLayout>
diff --git a/res/values/colors.xml b/res/values/colors.xml
index 0741a50..cc11ac9 100644
--- a/res/values/colors.xml
+++ b/res/values/colors.xml
@@ -27,5 +27,5 @@
     <color name="colorPrimary">#3462b3</color>
     <color name="colorPrimaryDark">#294d8c</color>
     <color name="colorAccent">#3462b3</color>
-
+    <color name="white">#ffffffff</color>
 </resources>
