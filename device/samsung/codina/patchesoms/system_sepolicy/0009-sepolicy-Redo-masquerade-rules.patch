diff --git a/system_server.te b/system_server.te
index c544803..5262a79 100644
--- a/system_server.te
+++ b/system_server.te
@@ -348,6 +348,9 @@ set_prop(system_server, ctl_bugreport_prop)
 # cppreopt property
